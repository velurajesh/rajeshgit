<div class="container">
   <div class="row">
	<div class="col-md-4 col-md-offset-0 panel panel-default">
	<h1 align="left" class="margin-base-vertical">Login</h1>
	<form class="margin-base-vertical" method="post" action="/auth">
          <p class="input-group ">
			<span class="input-group-addon"><span class="icon-envelope"></span></span>
			<input type="text" required class="form-control input-lg" name="username" placeholder="Login Name" />
		  </p>
          <p class="input-group ">
			<span class="input-group-addon"><span class="icon-key"></span></span>
			<input type="password" required class="form-control input-lg" name="password" placeholder="Password" />
		  </p>
          <br/>
		  <p class="text-center">
			<button type="submit" class="btn btn-success btn-lg">Get In</button>
		  </p>
	</form>
	</div>
   </div>
 </div>
